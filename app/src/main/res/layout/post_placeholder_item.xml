<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/placeholder_padding_bottom">

    <View
        android:id="@+id/placeholderImage"
        android:layout_width="@dimen/placeholder_image_size"
        android:layout_height="@dimen/placeholder_image_size"
        android:layout_margin="@dimen/margin"
        android:background="@color/placeholder_shimmer_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/placeholderTitle"
        android:layout_width="@dimen/placeholder_title_width"
        android:layout_height="@dimen/placeholder_title_height"
        android:layout_marginStart="@dimen/margin"
        android:background="@color/placeholder_shimmer_background"
        app:layout_constraintStart_toEndOf="@+id/placeholderImage"
        app:layout_constraintTop_toTopOf="@+id/placeholderImage" />

    <View
        android:id="@+id/placeholderSubtitle"
        android:layout_width="@dimen/placeholder_subtitle_width"
        android:layout_height="@dimen/placeholder_subtitle_height"
        android:background="@color/placeholder_shimmer_background"
        app:layout_constraintBottom_toBottomOf="@+id/placeholderImage"
        app:layout_constraintStart_toStartOf="@+id/placeholderTitle"
        app:layout_constraintTop_toBottomOf="@+id/placeholderTitle" />

    <View
        android:id="@+id/placeholderText1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/placeholder_content_text_height"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/placeholder_text1_margin_top"
        android:layout_marginEnd="@dimen/placeholder_text1_margin_end"
        android:background="@color/placeholder_shimmer_background"
        app:layout_constraintStart_toStartOf="@+id/placeholderImage"
        app:layout_constraintTop_toBottomOf="@+id/placeholderImage" />

    <View
        android:id="@+id/placeholderText2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/placeholder_content_text_height"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/placeholder_content_text_margin_top"
        android:layout_marginEnd="@dimen/placeholder_text2_margin_end"
        android:background="@color/placeholder_shimmer_background"
        app:layout_constraintStart_toStartOf="@+id/placeholderText1"
        app:layout_constraintTop_toBottomOf="@+id/placeholderText1" />

    <View
        android:id="@+id/placeholderText3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/placeholder_content_text_height"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/placeholder_content_text_margin_top"
        android:layout_marginEnd="@dimen/placeholder_text3_margin_end"
        android:background="@color/placeholder_shimmer_background"
        app:layout_constraintStart_toStartOf="@+id/placeholderText2"
        app:layout_constraintTop_toBottomOf="@+id/placeholderText2" />

</androidx.constraintlayout.widget.ConstraintLayout>