<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageServerError"
        android:layout_width="@dimen/image_error_server_size"
        android:layout_height="@dimen/image_error_server_size"
        android:src="@drawable/ic_sad" />

    <TextView
        android:id="@+id/textServerError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center"
        android:text="@string/server_not_available"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_error_server_size" />
</LinearLayout>